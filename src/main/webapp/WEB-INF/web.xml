<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">
    <display-name>Applcation web pour etudier tester l'authentification par session</display-name>
    <servlet>
        <servlet-name>Front</servlet-name>
        <servlet-class>servlet.FrontServlet</servlet-class>
        
        <!-- Configuration pour l'authentification et les rÃ´les -->
        <init-param>
            <param-name>authSessionKey</param-name>
            <param-value>auth</param-value>
        </init-param>
        <init-param>
            <param-name>roleSessionKey</param-name>
            <param-value>role</param-value>
        </init-param>
    </servlet>


    <servlet-mapping>
        <servlet-name>Front</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>WsFilter</filter-name>
        <filter-class>org.apache.tomcat.websocket.server.WsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WsFilter</filter-name>
        <url-pattern>/ws/*</url-pattern>
    </filter-mapping>

</web-app>